output.cardChat#chatBox
    .card-inner-chat
        header.d-flex.align-items-center.justify-content-center.p-lg-3
            h2.titulo_card_chat
                span#chatNombreUsuario= nombreUsuario
            button.btn.btn-custom.boton_cerrar#cerrarChat ❌

        // Spinner en lugar de la lista de mensajes al principio
        #spinner(style='display: none; text-align: center; padding: 2rem;')
            .loader

        // Lista de mensajes
        ul.lista_chat#listaMensajes(style='display: none;')
            each mensaje in mensajes
                li.d-flex.align-items-start
                    .mensaje-contenido
                        p= mensaje.content

        // Formulario de mensajes
        form#formularioMensaje.mt-3.px-3.d-flex
            input.form-control(type='text', id='mensajeInput', placeholder='Escribe tu mensaje...')
            button.btn.btn-custom.mx-2#enviarMensaje(type='button') ➤

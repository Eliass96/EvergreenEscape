output.cardPerfil(data-id-usuario=_id)
    .card-inner.d-flex.flex-column.align-items-center.justify-content-between
        // Contenedor del avatar con el botón para cambiar imagen
        .avatar-container(style="position: relative;")
            // Avatar de usuario
            img(src="https://mdbcdn.b-cdn.net/img/new/avatars/1.webp", class="rounded-circle shadow-4 avatar-img", alt="Avatar")

            // Botón invisible para cambiar imagen
            input(type="file", id="avatarInput", class="avatar-input", style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; opacity: 0; cursor: pointer;", onchange="previewImage(event)")

        .d-flex.flex-column.align-items-center.justify-content-between.mx-4.my-2
            p.parrafoPerfil Email
            p.txtDatosPerfil #{email}
        .d-flex.flex-column.align-items-center.justify-content-between.mx-4.my-2
            p.parrafoPerfil Nombre de Usuario
            p.txtDatosPerfil #{nombre}
        .d-flex.flex-column.align-items-center.justify-content-between.mb-4.mx-4.mt-2
            p.parrafoPerfil Nacionalidad
            p.txtDatosPerfil #{nacionalidad}
        input(type='button', value='Cerrar sesión', class='botonCerrarSesion', id='botonCerrarSesion')

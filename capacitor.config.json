{
  "appId": "com.game.evergreenescape",
  "appName": "EvergreenEscape",
  "webDir": "www",
  "android": {
    "permissions": [
      {
        "name": "android.permission.INTERNET"
      }
    ],
    "plugins": {
      "CapacitorHttp": {
        "enabled": true
      }
    }
  },
  "server": {
    "androidScheme": "http",
    "hostname": "localhost:30000",
    "androidPort": 30000
  },
  "cordova": {
    "preferences": {
      "viewport": "width=device-width, initial-scale=1.0, maximum-scale=1.0",
      "Orientation": "landscape"
    }
  }
}
